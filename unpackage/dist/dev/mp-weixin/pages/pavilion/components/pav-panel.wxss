.pav-panel {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx 30rpx;
}
.pav-panel.disabled .img, .pav-panel.disabled .name, .pav-panel.disabled .icon {
  opacity: 0.3;
}
.pav-panel.disabled .introduce {
  color: #999 !important;
}
.pav-panel .img {
  width: 240rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.pav-panel .img image {
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.pav-panel .text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.pav-panel .text .name {
  font-size: 30rpx;
  color: #bb8d4c;
  margin-bottom: 10rpx;
}
.pav-panel .text .name image {
  width: 108rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.pav-panel .text .introduce {
  line-height: 1.5;
  font-size: 24rpx;
}
.pav-panel .text .introduce .icon {
  margin-right: 5rpx;
}
.pav-panel:last-child {
  border-bottom: none;
}

