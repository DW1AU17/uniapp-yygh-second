.login-page {
  height: 100%;
  padding: 30rpx;
}
.login-page .login-header {
  text-align: center;
}
.login-page .login-header ._img {
  height: 71rpx;
  width: 64rpx;
  margin-top: 60rpx;
}
.login-page .login-header view {
  color: #bb8d4c;
  font-size: 24rpx;
  margin: 30rpx 0;
}
.login-page .cus-form {
  background-color: #fff;
}
.login-page .cus-form > view {
  padding: 20rpx 0 40rpx 0;
}
.login-page .cus-form .cus-form-item {
  display: -webkit-box;
